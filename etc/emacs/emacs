;;http://www.happycoder.org
;;http://cedet.sf.net
;;http://ecb.sf.net
;;http://www.dotemacs.de
;;http://www.boblycat.org/~malc/.emacs
;;http://www.emacswiki.org

;;;PATH and .el file
(setq load-path (nconc '( "~/.config/ctafconf/etc/emacs/"
			  "~/.config/ctafconf/etc/emacs/site-lisp/"
			  "~/.config/ctafconf/etc/emacs/site-lisp/mode/"
			  "~/.config/ctafconf/etc/emacs/site-lisp/mode/tuareg/"
			  "~/.config/ctafconf/etc/emacs/site-lisp/mode/haskell-mode-2.7.0/"
			  "~/.config/ctafconf/etc/emacs/site-lisp/company-0.5/") load-path))

;;debug those file on error
(setq debug-on-error t)
;;;;This sets garbage collection to hundred times of the default.
;;;;Supposedly significantly speeds up startup time. (Seems to work
;;;;for me,  but my computer is pretty modern. Disable if you are on
;;;;anything less than 1 ghz).
(setq gc-cons-threshold 50000000)

(load "safe-load")
;;(load-file "~/.config/ctafconf/etc/emacs/site-lisp/safe-load.el")

(if (file-exists-p "~/.emacs.pre.el")
    (safe-load "~/.emacs.pre.el"))

(safe-load "ctafconf_color")

;;emacs settings
(safe-load "ctafconf_settings")

;;startup message
(safe-load "ctafconf_startup")

;;mode (ada,tuareg, ido, autotemplate,..)
(safe-load "ctafconf_mode")

;;usefull functions
(safe-load "ctafconf_functions")

;;screensaver,
;;(safe-load "~/.config/ctafconf/etc/emacs/misc.emacs")

;;cparse, cpcomment, cwarn, cedet, ecb, semantic
(safe-load "ctafconf_prog")

;;keys bindings
(safe-load "ctafconf_bindings")

;;personal settings
(if (file-exists-p "~/.myemacs")
    (safe-load "~/.myemacs"))
(if (file-exists-p "~/.emacs.post.el")
    (safe-load "~/.emacs.post.el"))

;;print debug info
(safe-load-check)
