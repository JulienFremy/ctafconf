#THIS ALLOW ALSA TO ALLOW MANY CONNECTION ON ONE DEVICE
pcm.mixeur {
    type dmix
    ipc_key 1024          # must be unique!
    slave {
        pcm "hw:0,0"      # le nom/n° du hardware auquel dmix envoie le flux mixé
        period_time 0
        period_size 1024  # must be power of 2. Il semble que mplayer ne marche que si c'est 1024
        buffer_size 16384  # à augmenter si le son saute
        rate 48000        # ou 44100,
    }
}

pcm.!default {
    type plug
    slave.pcm "mixeur"     # le nom du périphérique dmix sur lequel plug envoie les flux rééchantillonnés
}

# mixer0 like above
ctl.mixer0 {
    type hw
    card 0
}
