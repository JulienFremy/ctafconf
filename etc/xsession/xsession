#!/usr/bin/env bash
## xsession for xsession in /home/ctaf/.ctafconf/etc/xsession
##
## Made by GESTES Cedric
## Login   <ctaf@epita.fr>
##
## Started on  Mon Sep 26 02:37:56 2005 GESTES Cedric
## Last update Tue Feb 13 05:38:09 2007 gestes cedric
##
##CTAFCONF

#test_wm
#launch_app add app to launch list
#launch_wm
#don't relaunch a wm before, the loop (protect with one var)



mv ~/.config/ctafconf/perso/ctafconf.log ~/.config/ctafconf/perso/ctafconf.log.1

. ~/.config/ctafconf/etc/shlib/xsession.sh

#refuse all connection to xserver except for localhost
xhost -
xhost +localhost

#fucking annoying bell
xset b off

#merge setting for x application (xterm,aterm,..)
xrdb -merge ~/.config/ctafconf/etc/xsession/Xdefaults

if [ -f ~/.config/ctafconf/perso/user-profile ] ; then
  . ~/.config/ctafconf/perso/user-profile
fi

#if ! test_wm e16 ; then
#fi
#set the wallpaper
launch_app ~/.config/ctafconf/bin/ct-set-bg


if test_wm term ; then
  #appel bloquant
  ct_log "TERM WM"
  launch_wm
  exit
fi

#personal startup file
if [ -f ~/.config/ctafconf/perso/xsession.mine ]; then
  source ~/.config/ctafconf/perso/xsession.mine
fi

########################### LAUNCHING WM ###########################
#launch the gnome setting daemon (for font, gconf, ...) after gnome-session
#cause gnome-session launch it
if ! test_wm gnome ; then
  if which gnome-settings-daemon >/dev/null 2>/dev/null; then
    launch_app gnome-settings-daemon
  fi
fi

if ! test_wm kde ; then
  if which kdeinit >/dev/null 2>/dev/null; then
    launch_app kdeinit
  fi
fi

#lauch the window manager
launch_wm

which gnome-terminal && exec gnome-terminal
exec xterm
