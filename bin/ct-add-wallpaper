#!/bin/sh
## ct-add-ctafconf for ctafconf in /home/ctaf/.ctafconf/bin
##
## Made by GESTES Cedric
## Login   <ctaf@epita.fr>
##
## Started on  Tue Oct  4 03:04:18 2005 GESTES Cedric
## Last update Thu Apr 20 23:00:19 2006 GESTES Cedric
##
#CTAFCONF

if [ $# -gt 0 ]; then
  wallpp=$@
  echo "add wallpaper $wallpp"
  echo "Use ct-profile or ct-installconf to modify your current wallpaper"
else
  . ~/.ctafconf/etc/shlib/ssft.sh
  SSFT_FRONTEND=graphic

  if ssft_file_selection "Select the wallpaper you want"; then
    wallpp="$SSFT_RESULT"
  fi
fi

cp "$wallpp" ~/.ctafconf/perso/wallpaper/

