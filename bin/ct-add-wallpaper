#CTAFCONF

if [ $# -gt 0 ]; then
    wallpp=$@
else
    echo "you should specify an image"
    exit
fi

echo "add wallpaper $wallpp"
echo "Use ct-profile or ct-installconf to modify your current wallpaper"
cp "$wallpp" ~/.ctafconf/perso/wallpaper/
