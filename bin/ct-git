#
# create a git repository in the folder blabla-git
#
function gsvn-init()
{
  git svn init svn+ssh://blabla blabla-git
}

#
# checkout from svn
#
function gsvn-co()
{
  $svnaddr = $1
  $dirname = $2
  $rev = $3
  if [ x$rev = x ] ; then
    rev="HEAD"
  fi
  git svn clone "$svnaddr" -r "$rev" "$dirname" --trunk=trunk --branches=branches --tags=tags
}

# checkout from the svn, using tags, trunk, branches
function gsvn-co-trunk()
{
  $svnaddr = $1
  $dirname = $2
  $rev = $3
  if [ x$rev = x ] ; then
    rev="HEAD"
  fi
  git svn clone "$svnaddr" -r "$rev" "$dirname" --trunk=trunk --branches=branches --tags=tags
}

#
# checkout from the svn (in branch master)
# param: revision
#
function gsvn-up()
{
  rev=$1
  if [ x$rev = x ] ; then
    rev="HEAD"
  fi
  git fetch -r $rev
}

#
# commit to the svn (the change in the current branch)
#
function gsvn-ci()
{
  git svn dcommit
}


function git-branch-switch()
{
  br=$1
  git branch $br
}

function gsvn-branch-create()
{
  br=$1
#   git branch $br
#   git checkout $br
  git checkout -b $br
}

function gsvn-branch-commit()
{
  git commit -a
}

function gsvn-branch-create-from()
{
  git checkout -b speed-up-spinlocks origin
}

function gsvn-branch-update-from-other()
{
  git checkout test && git pull . speed-up-spinlocks
}
