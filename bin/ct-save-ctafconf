#!/bin/sh
## ct-save-ctafconf for ctafconf in /home/ctaf/.ctafconf
##
## Made by GESTES Cedric
## Login   <ctaf@epita.fr>
##
## Started on  Tue Oct  4 03:04:18 2005 GESTES Cedric
## Last update Sat Nov 12 08:17:10 2005 GESTES Cedric
##
#CTAFCONF


cd ~
tar --exclude ".svn" --exclude ".ctaconf/user-profile" --exclude ".ctafconf/user-profile.mine" --exclude ".ctafconf/user-profile-previous" --exclude ".ctafconf/user-profile.csh" --exclude ".ctafconf/user-profile.csh-previous" -cvzf ctafconf-`date "+%Y%m%d"`.tgz .ctafconf

echo "tarball of the ctafconf: " ~/ctafconf-`date "+%Y%m%d"`.tgz
