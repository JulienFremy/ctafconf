echo "He write it in CLEAR in ~/.socks"
echo "socks server varenv could be configured in ~/.config/ctafconf/etc/shell/globalenv"

#te=$( cat ~/.socks 2>/dev/null)
echo -n "pleaze enter your socks password :"
read pwdso

echo -n $pwdso >~/.socks

echo "Changing permission for ~/.socks : 600"
chmod 600 ~/.socks
