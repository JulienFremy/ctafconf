#!/bin/sh
## ct-gconf.sh for ctafconf in /home/simon/.ctafconf/etc/gconf
##
## Made by
## Login   <simon@epita.fr>
##
## Started on  Thu Oct 13 04:27:37 2005
## Last update Thu Mar 23 06:34:04 2006 GESTES Cedric
##
##CTAFCONF

if [ $# -gt 0 ]; then
    param=$1
else
    echo "dump: ct-gconf dump"
    echo "load: ct-gconf load"
    exit
fi



if [ w$param = wdump ] ; then
#gnone-panel-bar
  gconftool-2 --dump /apps/panel > ~/.config/ctafconf/etc/gconf/panel
#gnome style
  gconftool-2 --dump /desktop/gnome/interface > ~/.config/ctafconf/etc/gconf/gnome-interface
#gnome-terminal profile
  gconftool-2 --dump /apps/gnome-terminal > ~/.config/ctafconf/etc/gconf/gnome-terminal
#metacity theme
  gconftool-2 --dump /apps/metacity/general > ~/.config/ctafconf/etc/gconf/metacity-window
fi

if [ w$param = wload ] ; then
    gfile=~/.config/ctafconf/etc/gconf/panel
    gconftool-2 --load="$gfile"
    gfile=~/.config/ctafconf/etc/gconf/gnome-interface
    gconftool-2 --load="$gfile"
    gfile=~/.config/ctafconf/etc/gconf/gnome-terminal
    gconftool-2 --load="$gfile"
    gfile=~/.config/ctafconf/etc/gconf/metacity-window
    gconftool-2 --load="$gfile"
fi
