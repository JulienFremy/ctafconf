if [ -d ~/.mozilla/firefox ]; then
  cd ~
  tar -cvzf save-firefox-`date "+%Y%m%d"`.tgz .mozilla/firefox

  echo "tarball of firefox profiles: " ~/save-firefox-`date "+%Y%m%d"`.tgz
else
  echo "can't find directory: ~/.mozilla/firefox"
fi
