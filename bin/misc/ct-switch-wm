#!/bin/sh
## ct-switch-wm for GRK in /home/ctaf
##
## Made by GESTES Cedric
## Login   <goctaf@gmail.com>
##
## Started on  Mon May 15 06:22:34 2006 GESTES Cedric
## Last update Tue May 16 23:23:48 2006 GESTES Cedric
##

. ~/.config/ctafconf/etc/shlib/ssft.sh


if [ $# -ge 1 ]; then
  wm=$1
else
  export SSFT_FRONTEND=console
  if ssft_select_single "Window Manager" "Choose your wm from the list" random fluxbox gnome kde xfce4 e16 term; then
    wm=$SSFT_RESULT
  fi
fi

echo $wm >~/.config/ctafconf/perso/current_wm$DISPLAY
echo $wm >~/.config/ctafconf/perso/current_wm:0

