#recursive grep with filename and line number
#exclude svn
grepr()
{
  # -s : silent error
  # -I : do not show binarymatch
  # -r : recursive
  # -n : line number
  # -H :
  grep --color=always -s -I -r -n \
    --exclude "\~*"               \
    --exclude "*.o"               \
    --exclude "*.a"               \
    --exclude "#*#"               \
    --exclude-dir="*git*"         \
    --exclude-dir="*.svn*"    $@  .
}

grepr $@

