echo "This program set your socks password"
echo "He write it in CLEAR in ~/.socks"
echo "socks server varenv could be configured in ~/.ctafconf/etc/zsh/zshenv"

te=$( cat ~/.socks 2>/dev/null)
echo -n "pleaze enter your socks password [$te]:"
read pwdso

echo $pwdso >~/.socks

echo "Changing permission for ~/.socks : 600"
chmod 600 ~/.socks
