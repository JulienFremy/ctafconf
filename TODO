POSIX
--sh
if cmp -s $SRCFILE $FILE; then
fi
export al=val
alias al=val
var=val
source

--tcsh
if ( -x file ) echo cool
setenv al val
alias al val
set var val

--ksh
export al=val
alias al=val
var=val

